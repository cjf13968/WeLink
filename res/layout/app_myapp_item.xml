<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip"
    android:paddingLeft="10dp"
    android:paddingRight="15dp" 
    android:background="@drawable/app_item_shape">

    <ImageView
        android:id="@+id/myappImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/myappName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myappImage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/myappImage"
        android:maxLength="30"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/myappInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myappName"
        android:layout_below="@+id/myappName"
        android:layout_toRightOf="@+id/myappImage"
        android:maxLength="20"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/myappCheck"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true" />

</RelativeLayout>